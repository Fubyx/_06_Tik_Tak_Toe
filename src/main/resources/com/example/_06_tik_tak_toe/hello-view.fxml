<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.URL?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._06_tik_tak_toe.HelloController">

    <stylesheets>
        <URL value="@customButton.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="1000.0"/>
        <RowConstraints minHeight="10.0" prefHeight="1000.0"/>
        <RowConstraints minHeight="10.0" prefHeight="1000.0"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="1000.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="1000.0"/>
        <ColumnConstraints minWidth="10.0" prefWidth="1000.0"/>
    </columnConstraints>

    <Button GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="2" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="2" GridPane.rowIndex="0" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="2" GridPane.rowIndex="1" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>
    <Button GridPane.columnIndex="2" GridPane.rowIndex="2" prefHeight="1000.0" prefWidth="Infinity" onAction="#clicked"/>

</GridPane>

